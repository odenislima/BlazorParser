<table id="eventTable" class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Start</th>
            <th>End</th>
        </tr>
    </thead>
    <tbody>
        @if (!HasItems)
        {
            <tr>
                <td colspan="4">No recordds to display</td>
            </tr>
        }
        else
        {

            @foreach (var forecast in @Events)
            {
                <tr>
                    <td>@forecast.Name</td>
                    <td>@forecast.Description</td>
                    <td>@forecast.Start</td>
                    <td>@forecast.End</td>
                </tr>
            }
        }
    </tbody>
</table>

@code {

    [Parameter] public List<EventModel> Events { get; set; }

    private bool HasItems => Events != null || Events.Any();
}
